{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "watch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "lib": ["es2017", "dom", "es2015.promise", "esnext.asynciterable"]
  },
  "include": [
    "src/**/*"
  ]
}
